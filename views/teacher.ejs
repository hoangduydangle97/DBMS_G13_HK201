<!DOCTYPE html>
<html>
    <header>
        <meta charset="utf-8">
        <title>Manage School</title>
        <link rel="shortcut icon" href="favicon.ico">
        <link rel="stylesheet" type="text/css" href="/public/css/style.css">
    </header>
    <body>
        <div class="container text-center">
            <h1>Manage School</h1>
            <h2><%= page == 'sqlite' ? 'SQLite' : 'Neo4j' %> </h2> 
            <div>
                <button type="button" class="pointer" id="home-btn" style="font-size: larger;">
                    Home
                </button>
                <button type="button" class="pointer" id="student-btn" style="margin-left: 20px; font-size: larger;">
                    Student
                </button>
                <button type="button" class="pointer" id="class-btn" style="margin-left: 20px; font-size: larger;">
                    Class
                </button>
            </div>
        </div>
        <div class="container">
            <caption>
                <h2 class="text-center">Teacher</h2>
                <h4 class="text-center">
                    <button type="button" class="pointer" id="add-btn">
                        + Add
                    </button>
                    <input type="text" id="search-input" style="margin-left: 20px;" placeholder="Search ...">
                </h4>
            </caption>
            <table class="center">
                <tr>
                  <th>Id</th>
                  <th>Name</th> 
                  <th>Age</th>
                  <th>Update</th>
                  <th id="delete-title">Delete</th>
                </tr>
            <% teachers.forEach(function(row){ %> 
                <tr id="<%= row.id_teacher %>">
                    <th><%= row.id_teacher %></th>
                    <th><%= row.name_teacher %></th> 
                    <th><%= row.age_teacher %></th>
                    <th>
                        <button type="button" class="pointer update-btn" onclick="updateBtn('<%= row.id_teacher %>')">
                            &#9998;
                        </button>
                    </th>
                    <th>
                        <button type="button" class="pointer delete-btn" onclick="delTeacher('id_teacher', '<%= row.id_teacher %>')">
                            &times;
                        </button>
                    </th>
                </tr>
            <% }); %> 
            </table>
        </div>
    <script src="/public/js/jquery-3.5.1.min.js"></script>
    <script src="/public/js/<%= page %>/teacher.js"></script>
    </body>
</html>